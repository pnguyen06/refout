<div class="container">
<h1>Listing recruiters</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Headhunter</th>
    </tr>
  </thead>

  <tbody>
    <% @recruiters.each do |recruiter| %>
      <tr>
        <td><%= link_to recruiter.name, recruiter %></td>
        <td><%= recruiter.headhunter.CompanyName %></td>
        <td>
          <%= link_to edit_recruiter_path(recruiter) do %>
            <span class="glyphicon glyphicon-edit"></span>
            Edit
          <% end %>
        </td>
        <td>
          <%= link_to recruiter, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recruiter', new_recruiter_path %>
</div>

<div class="container">
  <p id="notice"><%= notice %></p>

  <%= render 'layouts/bank/header' %>
  <div class="row">
    <div class="col-md-2 col-md-offset-1">
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-body">
              <%= render 'layouts/bank/sidenav' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
    	<div class="panel panel-default">
				<div class="panel-body">
					<h4>Groups</h4>
					<hr style="margin-top: -5px;">
					<div id="groups" class="transitions-enabled">
						<% @groups.each do |group| %>
							<div class="box-groups center">	 
								<%= link_to image_tag(group.image.url(:medium), :class => "img-circle", :title => group.name), group %>
							</div>
						<% end %>
					</div>
    		</div>
    	</div>
    </div>
  </div>
</div>

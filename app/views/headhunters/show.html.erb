<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<%= link_to 'Back', headhunters_path %>
			 | 
			<% if current_user.try(:admin?) %>
				<%= link_to edit_headhunter_path(@headhunter) do %>
					<span class="glyphicon glyphicon-edit"></span>
					Edit
				<% end %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="row">
						<div class="col-md-3">
							<%= image_tag @headhunter.image.url(:medium), class: "img-thumbnail" %>
							<br /><br />
							<%= link_to image_tag("glyphicons_050_link.png", :alt => "Website"), @headhunter.CompanyWebsite %>
							<%= link_to image_tag("glyphicons_010_envelope.png", :alt => "Email"), @headhunter.CompanyEmail %>
							<%= link_to image_tag("glyphicons_social_17_linked_in.png", :alt => "LinkedIn"), @headhunter.CompanyLinkedin %>
						</div>
						<div class="col-md-9">
							<h2><%= @headhunter.CompanyName %></h2>
							<p><%= @headhunter.CompanyDescription %></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3 col-md-offset-1">
			<div class="row">
				<div class="col-md-12">
					<div class="panel panel-default">
						<div class="panel-body">
							<h5>FIRM TYPES</h5>
						</div>
						<div class="panel-body">
							<h5>FOCUS</h5>
							<% if @headhunter.CompanyUndergrad %><small><p>Undergrad</p></small><% end %>
							<% if @headhunter.CompanyPreMBA %><small><p>PreMBA</p></small><% end %>
							<% if @headhunter.CompanyPostMBA %><small><p>PostMBA</p></small><% end %>
							<% if @headhunter.CompanyExecutive %><small><p>Executive</p></small><% end %>
						</div>
						<div class="panel-body">
							<h5>GEOGRAPHY</h5>
						</div>
					</div>
				</div>
			</div>
			<% if @headhunter.CompanyCandidateArea == "None" %>

			<% else %>
				<div class="row">
					<div class="col-md-12">
						<div class="panel panel-default">
							<div class="panel-body">
								<h5>CANDIDATE AREA</h5>
								<small><%= @headhunter.CompanyCandidateArea %></small>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
		<div class="col-md-7">
			<div class="panel panel-default">
				<div class="panel-body">
					<h5>CLIENTS</h5>
				</div>
			</div>
		</div>
	</div>
</div>